map $http_upgrade $connection_upgrade {
  default upgrade;
  ''      close;
}

server {
  listen 80;
  server_name ${FRONTEND_DOMAIN} ${API_DOMAIN};
  return 301 https://$host$request_uri;
}

server {
  listen 443 ssl http2;
  server_name ${FRONTEND_DOMAIN};

  ssl_certificate     /etc/ssl/lego/certificates/_.${ROOT_DOMAIN}.crt;
  ssl_certificate_key /etc/ssl/lego/certificates/_.${ROOT_DOMAIN}.key;

  # Basic hardening
  ssl_session_timeout 1d;
  ssl_session_cache shared:SSL:10m;
  ssl_session_tickets off;

  add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;

  # Backend direct access (same paths as frontend's rewrite)
  location /api/backend/ {
    proxy_http_version 1.1;
    proxy_set_header Host $host;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection $connection_upgrade;
    proxy_pass http://api:8003/;
  }

  # Frontend
  location / {
    proxy_http_version 1.1;
    proxy_set_header Host $host;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection $connection_upgrade;
    proxy_pass http://frontend:3000;
  }
}

server {
  listen 443 ssl http2;
  server_name ${API_DOMAIN};

  ssl_certificate     /etc/ssl/lego/certificates/_.${ROOT_DOMAIN}.crt;
  ssl_certificate_key /etc/ssl/lego/certificates/_.${ROOT_DOMAIN}.key;

  add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;

  # Worker internal control-plane endpoints (proxy to orchestrator).
  # Secured by WORKER_AUTH_TOKEN at the orchestrator level.
  location /internal/worker/ {
    proxy_http_version 1.1;
    proxy_set_header Host $host;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection $connection_upgrade;
    proxy_pass http://orchestrator:8001;
  }

  location / {
    proxy_http_version 1.1;
    proxy_set_header Host $host;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection $connection_upgrade;
    proxy_pass http://api:8003;
  }
}

